<% if current_user %>
	<% if @post.likes.find_by(:user_id => current_user.id).nil? %>
		<%= link_to 'Like', post_likes_path(@post), id: 'like-link', method: :post, :remote => true, class: 'btn btn-default' %>
	<% else %>
		<%= link_to 'Unlike', post_likes_path(@post), id: 'like-link', method: :post, :remote => true, class: 'btn btn-default' %>
	<% end %>
<% else %>
	<%= link_to 'Like', post_likes_path(@post), method: :post, class: 'btn btn-default' %>
<% end %>