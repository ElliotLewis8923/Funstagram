<section id='modal-main'>
	<%= image_tag @post.image.url(:medium) %><br>
	<strong><%= @post.caption %></strong>
	<section class='like-links'>
		<span><%= pluralize(@post.likes.count, 'like') %></span>
		<% if current_user %>
			<a class="like-link" data-method="post" data-remote="true" href="/posts/1/likes" rel="nofollow"><span class="link-name">Like</span></a>
		<% end %>
	</section>
	<section id='user-options'>
		<% if current_user.id == @post.user_id %>
			<%= link_to 'Delete', post_path(@post), method: :delete, :confirm => "Are you sure you would like to delete this post?" %>
			<%= link_to 'Edit', edit_post_path(@post) %>
		<% end %>
	</section>
</section>
<section id='modal-comments'>
	<section id='comments-list'>
		<ul>
			<% @post.comments.each do |comment| %>
			<li>
				<div id='comment-text'>
					<%= comment.text %>
				</div>
				<div id='comment-user'>
					<%= comment.username %>
				</div>
			</li>
			<% end %>
		</ul>
	</section>
<%= render 'comments/new' %>
</section>

<%= csrf_meta_tags %>

