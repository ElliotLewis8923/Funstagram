<section id='modal-main'>
	<div id='img-wrapper'>
		<%= image_tag @post.image.url(:medium) %>
	</div>
	<section id='user-options'>
		<% if current_user %>
			<% if current_user.id == @post.user_id %>
				<%= link_to 'Delete', post_path(@post), method: :delete, :confirm => "Are you sure you would like to delete this post?" %>
				<%= link_to 'Edit', edit_post_path(@post) %>
			<% end %>
		<% end %>
	</section>
</section>
<section id='modal-comments'>
	<section id='img-info'>
		<div id='username'>
			<%= link_to "#{@user.username}", user_path(@user) %>
		</div>
		<div id='caption'>
			<%= @post.caption %>
		</div>
		<i class='timestamp'><%= time_ago_in_words(@post.created_at) %> ago</i>
		<section id='like-links'>
			<span><%= pluralize(@post.likes.count, 'like') %></span>
		</section>
	</section>
	<section id='comments-list'>
		<ul class="list-group">
		   	<% @post.comments.each do |comment| %>
				<li class="list-group-item">
					<p class="list-group-item-text">
				        <%= link_to comment.username, user_path(comment.user) %>
				    </p>
				    <p class="list-group-item-heading">
				        <%= comment.text %>
				    </p>
				    <i class='timestamp'>
				      	<%= time_ago_in_words(comment.created_at) %> ago
				    </i>
				</li>
			<% end %>
		</ul>
	</section>
	<section class='modal-form'>
		<%= render 'comments/new' %>
		<div id="link-name">
				<% if @post.likes.find_by(:user_id => current_user.id).nil? %>
					<%= link_to 'Like', post_likes_path(@post), id: 'like-link', method: :post, :remote => true, class: 'btn btn-default' %>
				<% else %>
					<%= link_to 'Unlike', post_likes_path(@post), id: 'like-link', method: :post, :remote => true, class: 'btn btn-default' %>
				<% end %>
		</div>
	</section>
</section>