<% if @posts.count == 0 %>
No posts
<% end %>

<% @posts.each do |post| %>
<article class='post'>
<em><%= link_to image_tag(post.image.url(:thumb)), post_path(post) %></em><br>
<%= post.caption %>
<%= link_to 'Leave a comment', new_post_comment_path(post) %>
</article>
<% end %>


<%= link_to 'Add a post', new_post_path, class: 'image' %>