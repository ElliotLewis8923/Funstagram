<% if @posts.count == 0 %>
No posts
<% end %>

<% @posts.each do |post| %>
<article class='post'>
<em><%= link_to image_tag(post.image.url(:thumb)), post_path(post) %></em><br>
<%= post.caption %>
<%= post.comments.each do |comment| %>
<%= comment.text %>
<% end %>
<% if user_signed_in? %>
<%= link_to 'Leave a comment', new_post_comment_path(post) %>
<% end %>
</article>
<% end %>

<% if user_signed_in? %>
<%= link_to 'Add a post', new_post_path, class: 'image' %>
<% end %>